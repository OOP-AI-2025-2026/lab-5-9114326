public class Rock extends GameShape {
    @Override
    public String getName() {
        return "Камінь";
    }
}

public class Paper extends GameShape {
    @Override
    public String getName() {
        return "Папір";
    }
}

public class Scissors extends GameShape {
    @Override
    public String getName() {
        return "Ножиці";
    }
}

Клас гри з GUI (Swing)

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Random;

public class RoShamBoGame extends JFrame implements ActionListener {

    private final JButton rockButton = new JButton("Камінь");
    private final JButton paperButton = new JButton("Папір");
    private final JButton scissorsButton = new JButton("Ножиці");

    private final JLabel resultLabel = new JLabel("Зробіть свій вибір", SwingConstants.CENTER);
    private final JLabel computerLabel = new JLabel("Комп’ютер: -", SwingConstants.CENTER);
    private final JLabel playerLabel = new JLabel("Гравець: -", SwingConstants.CENTER);

    private final Random random = new Random();

    public RoShamBoGame() {
        super("RoShamBo");

        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setSize(400, 200);
        setLocationRelativeTo(null);
        setLayout(new BorderLayout());

        JPanel buttonsPanel = new JPanel();
        buttonsPanel.add(rockButton);
        buttonsPanel.add(paperButton);
        buttonsPanel.add(scissorsButton);

        rockButton.addActionListener(this);
        paperButton.addActionListener(this);
        scissorsButton.addActionListener(this);

        JPanel infoPanel = new JPanel(new GridLayout(3, 1));
        infoPanel.add(playerLabel);
        infoPanel.add(computerLabel);
        infoPanel.add(resultLabel);

        add(buttonsPanel, BorderLayout.NORTH);
        add(infoPanel, BorderLayout.CENTER);
    }

    // Генеруємо випадкову фігуру комп’ютера
    private GameShape generateShape() {
        int n = random.nextInt(3);
        switch (n) {
            case 0: return new Rock();
            case 1: return new Paper();
            default: return new Scissors();
        }
    }

    // 1 – виграв гравець, -1 – виграв комп, 0 – нічия
    private int checkWinner(GameShape comp, GameShape player) {
        // нічия
        if (comp.getClass() == player.getClass()) {
            return 0;
        }

        // player: Rock
        if (player instanceof Rock) {
            if (comp instanceof Scissors) return 1;
            if (comp instanceof Paper)   return -1;
        }

        // player: Paper
        if (player instanceof Paper) {
            if (comp instanceof Rock)     return 1;
            if (comp instanceof Scissors) return -1;
        }

        // player: Scissors
        if (player instanceof Scissors) {
            if (comp instanceof Paper)  return 1;
            if (comp instanceof Rock)   return -1;
        }

        return 0;
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        GameShape playerShape = null;

        if (e.getSource() == rockButton) {
            playerShape = new Rock();
        } else if (e.getSource() == paperButton) {
            playerShape = new Paper();
        } else if (e.getSource() == scissorsButton) {
            playerShape = new Scissors();
        }

        GameShape compShape = generateShape();

        playerLabel.setText("Гравець: " + playerShape.getName());
        computerLabel.setText("Комп’ютер: " + compShape.getName());

        int res = checkWinner(compShape, playerShape);

        if (res == 0) {
            resultLabel.setText("Результат: нічия");
        } else if (res > 0) {
            resultLabel.setText("Результат: виграв гравець");
        } else {
            resultLabel.setText("Результат: виграв комп’ютер");
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            RoShamBoGame game = new RoShamBoGame();
            game.setVisible(true);
        });
    }
}

Завдання 4
Абстрактний клас фігури Shape2D.java

import java.awt.Graphics;

public abstract class Shape2D {
    protected int x, y, width, height;

    public Shape2D(int x, int y, int width, int height) {
        this.x = Math.min(x, x + width);
        this.y = Math.min(y, y + height);
        this.width = Math.abs(width);
        this.height = Math.abs(height);
    }

    public abstract void draw(Graphics g);
}

Прямокутник RectShape.java

import java.awt.Graphics;

public class RectShape extends Shape2D {

    public RectShape(int x, int y, int width, int height) {
        super(x, y, width, height);
    }

    @Override
    public void draw(Graphics g) {
        g.drawRect(x, y, width, height);
    }
}

Еліпс EllipseShape.java

import java.awt.Graphics;

public class EllipseShape extends Shape2D {

    public EllipseShape(int x, int y, int width, int height) {
        super(x, y, width, height);
    }

    @Override
    public void draw(Graphics g) {
        g.drawOval(x, y, width, height);
    }
}

Панель малювання DrawPanel.java

import javax.swing.*;
import java.awt.*;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;
import java.util.ArrayList;
import java.util.List;

public class DrawPanel extends JPanel {

    public static final int MODE_RECT = 0;
    public static final int MODE_ELLIPSE = 1;

    private int currentMode = MODE_RECT;

    private final List<Shape2D> shapes = new ArrayList<>();
    private int startX, startY;
    private int currentX, currentY;
    private boolean dragging = false;

    public DrawPanel() {
        setBackground(Color.WHITE);

        MouseAdapter mouseHandler = new MouseAdapter() {
            @Override
            public void mousePressed(MouseEvent e) {
                startX = e.getX();
                startY = e.getY();
                currentX = startX;
                currentY = startY;
                dragging = true;
            }

            @Override
            public void mouseDragged(MouseEvent e) {
                currentX = e.getX();
                currentY = e.getY();
                repaint();
            }

            @Override
            public void mouseReleased(MouseEvent e) {
                dragging = false;
                int w = currentX - startX;
                int h = currentY - startY;

                Shape2D shape;
                if (currentMode == MODE_RECT) {
                    shape = new RectShape(startX, startY, w, h);
                } else {
                    shape = new EllipseShape(startX, startY, w, h);
                }
                shapes.add(shape);
                repaint();
            }
        };

        addMouseListener(mouseHandler);
        addMouseMotionListener(mouseHandler);
    }

    public void setMode(int mode) {
        this.currentMode = mode;
    }

    public void clearShapes() {
        shapes.clear();
        repaint();
    }

    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);

        // Малюємо вже додані фігури
        for (Shape2D s : shapes) {
            s.draw(g);
        }

        // Малюємо поточну "попередню" фігуру під час drag
        if (dragging) {
            int w = currentX - startX;
            int h = currentY - startY;
            int x = Math.min(startX, currentX);
            int y = Math.min(startY, currentY);
            w = Math.abs(w);
            h = Math.abs(h);

            if (currentMode == MODE_RECT) {
                g.drawRect(x, y, w, h);
            } else {
                g.drawOval(x, y, w, h);
            }
        }
    }
}

Головне вікно DrawFrame.java

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class DrawFrame extends JFrame implements ActionListener {

    private final DrawPanel drawPanel = new DrawPanel();
    private final JButton rectButton = new JButton("Rectangle");
    private final JButton ellipseButton = new JButton("Ellipse");
    private final JButton clearButton = new JButton("Clear");

    public DrawFrame() {
        super("Draw App");

        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setSize(800, 600);
        setLocationRelativeTo(null);

        JPanel topPanel = new JPanel();
        topPanel.add(rectButton);
        topPanel.add(ellipseButton);
        topPanel.add(clearButton);

        rectButton.addActionListener(this);
        ellipseButton.addActionListener(this);
        clearButton.addActionListener(this);

        add(topPanel, BorderLayout.NORTH);
        add(drawPanel, BorderLayout.CENTER);
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == rectButton) {
            drawPanel.setMode(DrawPanel.MODE_RECT);
        } else if (e.getSource() == ellipseButton) {
            drawPanel.setMode(DrawPanel.MODE_ELLIPSE);
        } else if (e.getSource() == clearButton) {
            drawPanel.clearShapes();
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            DrawFrame frame = new DrawFrame();
            frame.setVisible(true);
        });
    }
}





